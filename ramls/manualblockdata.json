{
  "$schema" : "http://json-schema.org/draft-04/schema#",
  "title": "Manual Patron Block Schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string"
    },
    "desc": {
      "type": "string"
    },
    "staffInformation": {
      "type": "string"
    },
    "patronMessage": {
      "type": "string"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "borrowing": {
      "type": "boolean"
    },
    "renewals": {
      "type": "boolean"
    },
    "requests": {
      "type": "boolean"
    },
    "userId": {
      "type": "string"
    },
    "metadata" : {
      "type" : "object",
      "$ref" : "raml-util/schemas/metadata.schema"
    },
    "id": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "desc",
    "userId"
   ]
}
